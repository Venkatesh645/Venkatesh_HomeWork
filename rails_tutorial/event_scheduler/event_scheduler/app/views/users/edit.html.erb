<div class="container">
	<div class="row">
		
<div class="col-md-6 col-md-offset-3">
	

<%= form_for :user, url: update_user_path(@user) do |f| %>
<p>
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname, "class" => "form-control", "required" => "true" %>
  </p>

  <p>
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname, "class" => "form-control", "required" => "true" %>
  </p>

  <p>
    <%= f.label :username %><br>
    <%= f.text_field :username, "class" => "form-control", "required" => "true" %>
  </p>

  <p>
  	<%= f.submit %>
  </p>
<% end %>
</div>
	</div>
</div>
