
<div class="container">
  <div class="row">
  <div class="col-md-6 col-md-offset-3 col-xs-12">
<%= form_for :author, url: sessions_path , method: "post"  do |f| %>
  

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :password_digest %><br>
    <%= f.text_field :password_digest, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div></div></div>